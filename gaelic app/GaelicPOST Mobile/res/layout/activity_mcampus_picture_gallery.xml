<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MCampusPictureGallery" >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ace_logo" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ednapier" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView3"
        android:background="#005daa"
        android:gravity="center"
        android:text="Merchiston Campus Picture Gallery"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/merchiston4" />

    <Button
        android:id="@+id/btnM2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnM1"
        android:layout_alignBottom="@+id/btnM1"
        android:layout_alignLeft="@+id/imageView2"
        android:background="#005daa"
        android:text="2"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnM1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="58dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:background="#005daa"
        android:text="1"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnM3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnM2"
        android:layout_alignBottom="@+id/btnM2"
        android:layout_alignRight="@+id/imageView2"
        android:background="#005daa"
        android:text="3"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnM4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnM3"
        android:layout_alignBottom="@+id/btnM3"
        android:layout_toRightOf="@+id/imageView1"
        android:background="#005daa"
        android:text="4"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnM5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnM1"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:background="#005daa"
        android:text="5"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnM6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnM5"
        android:layout_alignBottom="@+id/btnM5"
        android:layout_alignLeft="@+id/btnM2"
        android:background="#005daa"
        android:text="6"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnM8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnM7"
        android:layout_alignBottom="@+id/btnM7"
        android:layout_alignLeft="@+id/btnM4"
        android:background="#005daa"
        android:text="8"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnM7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnM6"
        android:layout_alignBottom="@+id/btnM6"
        android:layout_alignLeft="@+id/btnM3"
        android:background="#005daa"
        android:text="7"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Merchiston Campus"
        android:textColor="#005daa" />

</RelativeLayout>