<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".EECI" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="18dp"
        android:text="Accepted File Types"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:text="This application requires, as input, .txt files encoded in UTF-8. It is capable of outputting in either .txt files, with tags delimited by a forward slash (i.e. ‘/’), or in .csv files. The .txt file output can be easily imported into a range of third party concordancers, such as WordSmith Tools, AntConc or NLTK (Natural Language Toolkit). Files saved as .csv can be opened in Excel, and may be useful for a range of programming tasks." />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView4"
        android:text="Tagset Modes"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView5"
        android:text="The tagger provides output according to a simple or standard mode. The simple mode uses 41 tags and provides the part of speech, along with a smaller number of gramatical features. Standard uses 246 tags, uses a modified version of Irish PAROLE tagset. It is able to accurately categorise all of morphology and orthology of modern Scottish Gaelic and it is highly accurate for a tagger of this granularity, the data sparsity in certains aspects data means that it struggles with certain categories." />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="matrix"
        android:src="@drawable/ednapier" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView1"
        android:background="#005daa"
        android:gravity="center"
        android:text="How it works"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

</RelativeLayout>